<simulation xmlns:xi="http://www.w3.org/2001/XInclude">
  <control>
    <duration>1000</duration>
    <startmonth>1</startmonth>
    <startyear>1967</startyear>
    <decay>lazy</decay>
    <explicit_inventory>true</explicit_inventory>
  </control>

  <archetypes>
    <spec><lib>cycamore</lib><name>DeployInst</name></spec>
    <spec><lib>cycamore</lib><name>Source</name></spec>
    <spec><lib>cycamore</lib><name>Storage</name></spec>
    <spec><lib>cycamore</lib><name>Sink</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
    <spec><lib>tricycle</lib><name>FusionPowerPlant</name></spec>
  </archetypes>


    <!--Start of the Commodities Section-->
  <commodity>
    <name>Tritium</name>
    <solution_priority>1.0</solution_priority>
  </commodity>
  <commodity>
    <name>Helium_3</name>
    <solution_priority>1.0</solution_priority>
  </commodity>


  <!--Start of the Recipe Section-->
  <recipe>
    <name>T</name>
    <basis>atom</basis>
    <nuclide>
        <id>10030000</id>
        <comp>1</comp>
    </nuclide>
  </recipe>

   <recipe>
    <name>Lithium</name>
    <basis>atom</basis>
    <nuclide>
      <id>30060000</id>
      <comp>0.3</comp>
    </nuclide>
    <nuclide>
      <id>30070000</id>
      <comp>0.7</comp>
    </nuclide>
  </recipe>

<!--Facility Definitions-->
  <facility>
    <name>OnePlant</name>
    <config>
      <FusionPowerPlant>
        <fusion_power>100</fusion_power>
	      <TBR>1.10</TBR>
        <reserve_inventory>6.0</reserve_inventory>
        <!--<startup_inventory>8.121</startup_inventory>-->
        <sequestered_equilibrium>2.121</sequestered_equilibrium>
        <fuel_incommod>TritiumFuel</fuel_incommod>
        <refuel_mode>fill</refuel_mode>
        <blanket_inrecipe>Lithium</blanket_inrecipe>
        <blanket_incommod>Enriched_Lithium</blanket_incommod>
        <blanket_size>1000</blanket_size>
        <!--<buy_quantity>8.0</buy_quantity>
        <buy_frequency>1</buy_frequency>-->
        <he3_outcommod>Helium_3</he3_outcommod>
        <Li7_contribution>0.7</Li7_contribution>
        <blanket_outcommod>Waste</blanket_outcommod>
      </FusionPowerPlant>
    </config>
  </facility>

    <facility>
    <name>Blanket Supply</name>
    <config>
        <Source>
            <outcommod>Enriched_Lithium</outcommod>
            <outrecipe>Lithium</outrecipe>
            <throughput>1000</throughput>
        </Source>
    </config>
  </facility>

  <facility>
    <name>Waste Sink</name>
    <config>
        <Sink>
            <in_commods><val>Waste</val></in_commods>
            <capacity>1e+299</capacity>
        </Sink>
    </config>
  </facility>

  <facility>
   <name>Storage</name>
    <config>
      <Storage>
        <in_commods>
            <val>Tritium</val>
        </in_commods>
        <out_commods>
            <val>TritiumFuel</val>
        </out_commods>
        <throughput>1e299</throughput>
      </Storage>
    </config>
  </facility>

